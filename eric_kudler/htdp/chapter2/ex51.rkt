(require 2htdp/image)
(require 2htdp/universe)

(define (render x)
  (circle 20 "solid" x))

(define (traffic-light-next s)
  (cond
    [(string=? "red" s) "green"]
    [(string=? "green" s) "yellow"]
    [(string=? "yellow" s) "red"]))

(define (tock x)
  (traffic-light-next x))

(define (main ws)
   (big-bang ws
     [on-tick tock]
     [to-draw render]
    ))

(main "green")