#lang racket

(require 2htdp/image)

(overlay/align "left" "center"
               (text "hello world" 11 "black")
               (empty-scene 200 20))

(define-struct editor [pre post])

(define (render e)
  (overlay/align "left" "center"
                 (beside (text (editor-pre e) 11 "black")
                         (rectangle 1 20 "solid" "red")
                         (text (editor-post e) 11 "black"))
                 (empty-scene 200 20)))

(render (make-editor "h" "i"))